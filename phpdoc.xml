<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
    <title>Swagger Validator PHP</title>
    <parser>
        <target>./doc</target>
        <encoding>utf8</encoding>
        <extensions>
            <extension>php</extension>
        </extensions>
    </parser>
    <transformer>
        <target>phpdoc-md</target>
    </transformer>
    <transformations>
        <template name="xml" />
    </transformations>
    <files>
        <directory>./src</directory>
        <ignore>./src/Example.php</ignore>
        <ignore>./src/Compat.php</ignore>
        <ignore>./src/SwaggerAutoload.php</ignore>
    </files>
</phpdoc>