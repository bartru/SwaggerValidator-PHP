<phpunit 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.5/phpunit.xsd"
    backupGlobals="false" 
    backupStaticAttributes="false"    
    bootstrap="bootstrap.php"
    stopOnError="true"
    stopOnFailure="false"
    stopOnIncomplete="true"
    stopOnSkipped="false"
    stopOnRisky="false"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    colors="always"
    cacheTokens="false"
    processIsolation="false"
    verbose="true"
>
    <testsuites>
        <testsuite name="Swagger Validator">
            <directory suffix="Test.php" phpVersion="5.3.0" phpVersionOperator=">=">testcases/</directory>
        </testsuite>
        <logging>
            <log type="coverage-html" target="metrics/report" lowUpperBound="35" highLowerBound="70"/>
            <log type="coverage-clover" target="metrics/coverage.xml"/>
            <log type="coverage-php" target="metrics/coverage.serialized"/>
            <log type="coverage-text" target="php://stdout" showUncoveredFiles="true"/>
            <log type="json" target="metrics/logfile.json"/>
            <log type="tap" target="metrics/logfile.tap"/>
            <log type="junit" target="metrics/logfile.xml" logIncompleteSkipped="false"/>
            <log type="testdox-html" target="metrics/testdox.html"/>
            <log type="testdox-text" target="metrics/testdox.txt"/>
        </logging>
    </testsuites>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">../src</directory>
            <exclude>
                <file>../src/SwaggerValidator/Example.php</file>
            </exclude>
        </whitelist>
    </filter>

</phpunit>