<phpunit 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.5/phpunit.xsd"
    backupGlobals="false" 
    backupStaticAttributes="false"    
    bootstrap="bootstrap.php"
    stopOnError="true"
    stopOnFailure="false"
    stopOnIncomplete="true"
    stopOnSkipped="false"
    stopOnRisky="false"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    colors="always"
    cacheTokens="false"
    processIsolation="false"
    verbose="true"
>
    <testsuites>
        <testsuite name="Swagger Validator">
            <directory suffix="Test.php" phpVersion="5.3.0" phpVersionOperator=">=">testcases/</directory>
        </testsuite>
        <logging>
            <log type="coverage-clover" target="build/log/coverage.xml"/>
            <log type="coverage-text" target="php://stdout" showUncoveredFiles="true"/>
        </logging>
    </testsuites>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">../../src</directory>
            <exclude>
                <file>../../src/SwaggerValidator/Example.php</file>
                <directory>../../bin</directory>
                <directory>../../build</directory>
                <directory>../../doc</directory>
                <directory>../../tests</directory>
                <directory>../../vendor</directory>
            </exclude>
        </whitelist>
    </filter>

</phpunit>